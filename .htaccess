<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /subdirectory/

    #####################################################################
    # 1. Force canonical “extension‑less” URLs
    #    e.g.  /about.html → /about    (301 permanent redirect)
    #####################################################################
    RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?]   [NC]
    RewriteRule ^ %1 [R=301,L]

    #####################################################################
    # 2. When the visitor asks for “/about”, serve “/about.html” *internally*
    #####################################################################
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.html -f
    RewriteRule ^(.+?)/?$  $1.html   [L]

    #####################################################################
    # 3. SPA / catch‑all fallback (unchanged from your original snippet)
    #####################################################################
    RewriteRule ^index\.html$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-l
    RewriteRule . /index.html [L]
</IfModule>
